<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BabyCare" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="materialCalendarTheme">@style/ThemeOverlay.App.DatePicker</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="materialCardViewStyle">@style/MyCardView</item>

        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/strong_green</item>
        <item name="colorOnSurfaceVariant">@color/black</item>
        <item name="colorSurface">@color/bg_color</item>

        <!-- Customize text field of the text input mode. -->
    </style>


    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/bg_color</item>
        <item name="cardElevation">8dp</item>
        <item name="cardCornerRadius">20dp</item>
    </style>
    <style name="Theme.BabyCare" parent="Base.Theme.BabyCare" />
</resources>