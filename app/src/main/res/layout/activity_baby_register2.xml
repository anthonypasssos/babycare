<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BabyRegister2"
    android:background="@color/bg_color">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="-22dp"
        android:src="@drawable/bush" />

    <ImageView
        android:id="@+id/green_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="80dp"
        android:src="@drawable/green_logo"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/green_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:text="Primeiro acesso?"
        android:textSize="24sp"
        android:fontFamily="@font/leaguespartan_bold"/>

    <TextView
        android:id="@+id/subtittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="@id/title"
        app:layout_constraintRight_toRightOf="@id/title"
        android:text="Queremos conhecer seu bebê!"
        android:fontFamily="@font/leaguespartan_medium"/>

    <TextView
        android:id="@+id/gender_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/leaguespartan_semibold"
        android:text="Qual o genêro do seu bebê?"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/subtittle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="382dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/girl_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/gender_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/boy_btn"
        app:layout_constraintVertical_bias="0.15"
        android:text="Menina"
        android:textSize="23sp"
        android:fontFamily="@font/leaguespartan_medium"
        android:drawableTop="@drawable/girl_draw"
        android:drawablePadding="8dp"
        android:background="@drawable/button_pressed"
        app:rippleColor="@color/black"
        app:backgroundTint="@android:color/transparent"
        app:iconTint="@color/white"
        android:textColor="@color/black"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/boy_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/girl_btn"
        app:layout_constraintStart_toEndOf="@id/girl_btn"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Menino"
        android:textSize="23sp"
        android:fontFamily="@font/leaguespartan_medium"
        android:drawableTop="@drawable/ic_boy_draw"
        android:drawablePadding="8dp"
        android:background="@drawable/button_pressed"
        app:backgroundTint="@android:color/transparent"
        app:iconTint="@color/white"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/bush"
        android:rotation="180"
        android:layout_marginBottom="-22dp" />

    <ImageButton
        android:id="@+id/next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_draw"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.95"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_draw"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:rotation="180"
        app:layout_constraintHorizontal_bias="0.05"/>

</androidx.constraintlayout.widget.ConstraintLayout>